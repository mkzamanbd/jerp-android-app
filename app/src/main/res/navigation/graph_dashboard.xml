<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dashboard"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.mvvm.ui.view.fragments.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.mvvm.ui.view.fragments.ProductsFragment"
        android:label="Product List"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/userDetailFragment"
        android:name="com.example.mvvm.ui.view.fragments.UserDetailFragment"
        android:label="Product Detail"
        tools:layout="@layout/fragment_user_detail" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mvvm.ui.view.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.mvvm.ui.view.fragments.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />

</navigation>