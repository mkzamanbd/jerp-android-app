<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.view.fragments.ProductsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dividerHeight"
        app:cardElevation="@dimen/zero">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteen"
                android:layout_marginTop="@dimen/five"
                android:layout_marginEnd="@dimen/fifteen"
                android:layout_marginBottom="@dimen/five">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_search"
                    style="@style/RobotoRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_input"
                    android:drawableStart="@drawable/ic_baseline_search_24"
                    android:gravity="center_vertical"
                    android:hint="@string/todo"
                    android:inputType="text"
                    android:padding="@dimen/eight"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fifteen" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cancel_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/five"
                    android:padding="@dimen/eight"
                    android:src="@drawable/ic_baseline_close_24"
                    android:visibility="gone" />

            </RelativeLayout>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five"
                android:layout_marginEnd="@dimen/five"
                android:queryBackground="@android:color/transparent"
                android:textSize="@dimen/fourteen"
                android:visibility="invisible"
                app:defaultQueryHint="Search here"
                app:queryHint="Search here" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dividerHeight"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            tools:listitem="@layout/product_list_item" />
    </LinearLayout>


</LinearLayout>