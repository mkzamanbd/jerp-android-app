<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mvvm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="loginHeader">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/thirty</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="imageRoundedFull">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RobotoRegular" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoMedium" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RobotoBold" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RobotoLight" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
</resources>